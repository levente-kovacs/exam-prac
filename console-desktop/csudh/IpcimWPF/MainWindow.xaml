<Window x:Class="IpcimWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IpcimWPF"
        mc:Ignorable="d"
        Title="IpcimWPF" Height="450" Width="800">
    <Grid>
        <DataGrid Name="ip_dg" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,400,70"/>
        <Label Content="Domain-name:" HorizontalAlignment="Left" Margin="554,76,0,0" VerticalAlignment="Top"/>
        <Label Content="Ip-cím:" HorizontalAlignment="Left" Margin="554,174,0,0" VerticalAlignment="Top"/>
        <TextBox Name="domain_tb" HorizontalAlignment="Left" Margin="507,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox Name="ip_tb" HorizontalAlignment="Left" Margin="507,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="input_btn" Width="80" Content="Bevitel" HorizontalAlignment="Left" Margin="508,263,0,0" VerticalAlignment="Top" Click="input_btn_Click"/>
        <Button Name="save_btn" Width="80" Content="Mentés" HorizontalAlignment="Left" Margin="507,321,0,0" VerticalAlignment="Top" Click="save_btn_Click"/>

    </Grid>
</Window>
