<Window x:Class="LabirintusGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabirintusGUI"
        mc:Ignorable="d"
        Title="Labirintus készítő" Height="600" Width="600">
    <Canvas Name="vaszon">
        <Label Content="Labirintus mérete [sor x oszlop]:" HorizontalAlignment="Left" Margin="39,44,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="comboB_X" HorizontalAlignment="Left" Margin="260,46,0,0" VerticalAlignment="Top" Width="60"/>
        <ComboBox Name="comboB_Y" HorizontalAlignment="Left" Margin="382,46,0,0" VerticalAlignment="Top" Width="60"/>
        <Button Name="btn_create" Content="Induló labirintus létrehozása" HorizontalAlignment="Left" VerticalAlignment="Center" Click="btn_create_Click" Canvas.Left="44" Canvas.Top="101"/>
        <Button Name="btn_save" Content="Labirintus mentése" HorizontalAlignment="Left" Margin="234,100,0,0" VerticalAlignment="Top" Click="btn_save_Click"/>
        <ComboBox Name="comboB_index" SelectedValue="3" HorizontalAlignment="Left" Margin="382,100,0,0" VerticalAlignment="Top" Width="60"/>

    </Canvas>
</Window>
